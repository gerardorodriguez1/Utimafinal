<div class="container p-4">
    <div class="row">
        {{#each links}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{material}}" target="_blank">
                        <h2 class="card-title text-uppercase">
                            {{material}}
                        </h2>
                    </a>
                    <p class="m-2">{{descripcion}}</p>
                    <a class="btn btn-danger" href="/links/delete/{{id}}">
                        Eliminar material
                    </a>
                    <a class="btn btn-secondary" href="/links/edit/{{id}}">
                        Editar
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No tienes ningun material para reciclar de momento.</p>
                <a href="/links/add">RECICLA YA!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>